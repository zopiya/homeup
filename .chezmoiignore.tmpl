# ------------------------------------------------------------------------------
# Profile-Based Exclusions
# ------------------------------------------------------------------------------

{{- $profile := .profile | default "workstation" }}

{{- if ne $profile "workstation" }}
# Non-Workstation: Exclude GUI and Desktop configurations
.config/vscode/
# Non-Workstation: Block private key and GPG material
.ssh/id_*
.ssh/id_*.*
.gnupg/
.gnupg/**
.config/security/
.config/security/*.inc
{{- end }}

{{- if eq $profile "server" }}
# Server: Exclude security tools that require private keys
.config/security/1password.inc
.config/security/yubikey.inc
{{- end }}

{{- if eq $profile "codespace" }}
# Codespace: Exclude items handled by devcontainer
# (Currently none - shell experience should be consistent)
{{- end }}

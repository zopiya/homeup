# ==============================================================================
# Chezmoi Configuration
# ==============================================================================

# --- Source Directory ---
sourceDir = "{{ .chezmoi.homeDir }}/.local/share/chezmoi"

# --- Global Variables ---
[data]
    name = "zopiya"
    email = "i@zopiya.com"
    signingkey = "4520C731F79D0C82"

    # Profile: workstation | codespace | server
    # Override via: HOMEUP_PROFILE env var or set manually after init
    profile = "{{ env "HOMEUP_PROFILE" | default "workstation" }}"

# --- Editor ---
[edit]
    command = "nvim"

# --- Diff ---
[diff]
    command = "delta"
    pager = "delta"
    exclude = ["scripts/**", "externals/**"]

# --- Merge ---
[merge]
    command = "nvim"
    args = ["-d", "{{ .Destination }}", "{{ .Source }}", "{{ .Target }}"]

# --- Update ---
[update]
    apply = false
    method = "brew"

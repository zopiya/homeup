# ==============================================================================
# Chezmoi Configuration
# ==============================================================================

# --- Source Directory ---
sourceDir = "{{ .chezmoi.homeDir }}/.local/share/chezmoi"

# --- Global Variables ---
[data]
    name = "zopiya"
    email = "i@zopiya.com"
    signingkey = "4520C731F79D0C82"

    # Profile: macos | linux | mini
    # Default: mini (safe mode - minimal tools, no GPG/SSH keys)
    # Set via: bootstrap.sh --promptString or HOMEUP_PROFILE env var
    profile = "{{ .profile | default (env "HOMEUP_PROFILE") | default "mini" }}"

# --- Editor ---
[edit]
    command = "nvim"

# --- Diff ---
[diff]
    command = "delta"
    pager = "delta"
    # exclude = ["scripts/**", "externals/**"]

# --- Merge ---
[merge]
    command = "nvim"
    args = ["-d", "{{ `{{ .Destination }}` }}", "{{ `{{ .Source }}` }}", "{{ `{{ .Target }}` }}"]

# --- Update ---
[update]
    apply = false
    method = "brew"

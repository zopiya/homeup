# Terminal
set -g default-terminal "tmux-256color"
set -ga terminal-overrides ",xterm-256color:Tc,alacritty:Tc,kitty:Tc"
set -g default-shell "${SHELL}"
set -g history-limit 50000
set -g display-time 1500
set -g focus-events on
set -g set-clipboard on
set -g allow-passthrough on

# Prefix
set -g prefix C-a
unbind C-b
bind C-a send-prefix
bind C-a last-window

# Index
set -g base-index 1
setw -g pane-base-index 1
set -g renumber-windows on

# Mouse
set -g mouse on

# Pane split
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"

# Pane navigation
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

bind -n M-Left select-pane -L
bind -n M-Down select-pane -D
bind -n M-Up select-pane -U
bind -n M-Right select-pane -R

set -g display-panes-time 2000

# Pane resize
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5
bind m resize-pane -Z

# --- Window Navigation ---
bind -n S-Left previous-window
bind -n S-Right next-window
bind -r < swap-window -t -1 \; select-window -t -1
bind -r > swap-window -t +1 \; select-window -t +1
bind Tab last-window
bind BTab switch-client -l

# --- Copy Mode (vi) ---
setw -g mode-keys vi
bind Escape copy-mode
bind -T copy-mode-vi v send-keys -X begin-selection
bind -T copy-mode-vi C-v send-keys -X rectangle-toggle
bind -T copy-mode-vi Escape send-keys -X cancel

# --- Session ---
bind s choose-tree -Zs
bind w choose-tree -Zw
bind C new-session
bind c new-window -c "#{pane_current_path}"
bind , command-prompt -I "#W" "rename-window '%%'"
bind '$' command-prompt -I "#S" "rename-session '%%'"
bind x confirm-before -p "Kill pane? (y/n)" kill-pane
bind X confirm-before -p "Kill window? (y/n)" kill-window

# --- Reload ---
bind r source-file ~/.config/tmux/tmux.conf \; display-message "Config reloaded"

# --- Status Bar ---
set -g status-position bottom
set -g status-justify left
set -g status-style "bg=colour235,fg=colour248"
set -g status-left-length 40
set -g status-right-length 60
set -g status-left "#{?client_prefix,#[bg=colour166]#[fg=colour235] PREFIX ,} #[fg=colour166,bold]#S "
set -g status-right "#[fg=colour244]#H  #[fg=colour255,bg=colour239] %m-%d %H:%M "
setw -g window-status-format " #I:#W#F "
setw -g window-status-current-format "#[fg=colour235,bg=colour166,bold] #I:#W#F "
setw -g window-status-separator ""
setw -g window-status-activity-style "fg=colour166"
setw -g window-status-bell-style "fg=colour255,bg=colour196"

# --- Pane Border ---
set -g pane-border-style "fg=colour238"
set -g pane-active-border-style "fg=colour166"

# --- Message ---
set -g message-style "bg=colour166,fg=colour235,bold"
set -g mode-style "bg=colour166,fg=colour235"

# --- Performance ---
set -sg escape-time 10
setw -g aggressive-resize on

# --- Activity ---
setw -g monitor-activity on
set -g visual-activity off
set -g visual-bell off

# --- Sync Panes ---
bind S setw synchronize-panes

# --- Layout ---
bind Space next-layout
bind '{' swap-pane -U
bind '}' swap-pane -D

# --- Utilities ---
bind e new-window -n "conf" "$EDITOR ~/.config/tmux/tmux.conf && tmux source ~/.config/tmux/tmux.conf"
bind q display-panes
bind t clock-mode
set -g clock-mode-style 24

# --- Environment ---
set -g update-environment "DISPLAY SSH_AUTH_SOCK SSH_AGENT_PID SSH_CONNECTION XAUTHORITY TERM"

# --- Nested Tmux (F12 toggle) ---
bind -T root F12 \
    set prefix None \; \
    set key-table off \; \
    set status-style "bg=colour238,fg=colour244" \; \
    refresh-client -S

bind -T off F12 \
    set -u prefix \; \
    set -u key-table \; \
    set -u status-style \; \
    refresh-client -S

# --- Plugins (TPM) ---
# Install: git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
# Then press prefix + I to install plugins

set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-yank'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'

# Resurrect
set -g @resurrect-capture-pane-contents 'on'
set -g @resurrect-strategy-vim 'session'
set -g @resurrect-strategy-nvim 'session'

# Continuum
set -g @continuum-restore 'on'
set -g @continuum-save-interval '15'

# Initialize TPM (keep at bottom)
# Only load TPM if it's installed
if-shell "[ -f ~/.tmux/plugins/tpm/tpm ]" "run '~/.tmux/plugins/tpm/tpm'"

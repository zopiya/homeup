[include]
    path = {{ .chezmoi.homeDir }}/.config/git/identity.gitconfig
    path = {{ .chezmoi.homeDir }}/.config/git/aliases.gitconfig

[core]
    editor = nvim
    pager = delta
    autocrlf = input
    safecrlf = true
    eol = lf
{{- if eq .chezmoi.os "darwin" }}
    precomposeunicode = true
    ignorecase = true
{{- end }}

[credential]
{{- if eq .chezmoi.os "darwin" }}
    helper = osxkeychain
{{- else }}
    helper = cache --timeout=3600
{{- end }}

[gpg]
    program = gpg

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    autoSetupRemote = true

{{ if (get . "install_security") }}
[commit]
    gpgsign = true

[tag]
    gpgsign = true
{{ end }}

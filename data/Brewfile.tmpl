cask "localsend"
cask "nextcloud"
cask "obsidian"
cask "orbstack"
cask "raycast"
cask "rectangle"
cask "stats"
cask "typora"
cask "visual-studio-code"
cask "vlc"
cask "wireshark-app"
{{   end -}}
{{ end -}}

{{ if (get . "install_mise") -}}
# Development Runtimes
brew "mise"
{{ end -}}

{{ if (get . "install_maintenance") -}}
# Maintenance Tools
brew "restic"
brew "topgrade"
{{ end -}}

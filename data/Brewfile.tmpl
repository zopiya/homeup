{{ if (get . "install_core_cli") -}}
# ===== Core CLI Tools =====
brew "zsh"
brew "chezmoi"
brew "git"
brew "wget"
brew "curl"
brew "ripgrep"
brew "fd"
brew "fzf"
brew "bat"
brew "eza"
brew "jq"
brew "yq"
brew "git-delta"
brew "zoxide"
brew "starship"
brew "sheldon"
brew "neovim"
brew "lazygit"
brew "gh"
brew "uv"
brew "pnpm"
{{ end -}}

{{ if (get . "install_fonts") -}}
# ===== Fonts =====
# Code
cask "font-jetbrains-mono-nerd-font"
# UI / Fallback
cask "font-noto-sans-cjk"
# Reading / Serif
cask "font-source-han-serif"
{{ end -}}

{{ if (get . "install_security") -}}
# ===== Security Tools =====
brew "gnupg"
brew "ykman"
{{ if eq .chezmoi.os "darwin" -}}
brew "pinentry-mac"
cask "1password-cli"
{{ else -}}
brew "1password/tap/1password-cli"
{{ end -}}
brew "age"
{{ end -}}

{{ if and (get . "install_gui") (not (get . "headless")) -}}
# ===== GUI Applications (macOS) =====
{{ if eq .chezmoi.os "darwin" -}}
# Cross-platform
cask "visual-studio-code"
cask "google-chrome"
cask "dbeaver-community"
cask "electerm"
cask "localsend"

# macOS Exclusive
cask "iterm2"
cask "raycast"
cask "orbstack"
cask "1password"
{{ end -}}
{{ end -}}

{{ if (get . "install_mise") -}}
# ===== Development Runtimes =====
brew "mise"
{{ end -}}

{{ if (get . "install_maintenance") -}}
# ===== Maintenance Tools =====
brew "topgrade"
brew "restic"
{{ end -}}

#!/bin/bash

# Purpose: Install and configure security tools
# Runs once when hash changes

{{- template "utils.sh" . -}}

{{ if not .install_security -}}
info "Skipping security tools installation (configured in .chezmoi.toml)"
exit 0
{{ end -}}

set -euo pipefail

header "Configuring Security Tools"

# Import GPG keys if available (placeholder)
# gpg --import ...

# Configure GPG Agent
step 1 1 "Configuring GPG Agent..."
gpgconf --kill gpg-agent > /dev/null 2>&1 || true
gpgconf --launch gpg-agent > /dev/null 2>&1 || true

success "Security tools configured"
